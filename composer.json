{
    "name": "aoe/happy-feet",
    "description": "Happy Feet Footnotes.",
    "type": "typo3-cms-extension",
    "homepage": "https://github.com/AOEpeople/happy_feet",
    "license": "GPL-3.0",
    "support": {
        "email": "dev@aoe.com",
        "issues": "https://github.com/AOEpeople/happy_feet/issues",
        "source": "https://github.com/AOEpeople/happy_feet"
    },
    "authors": [
        {
            "name": "AOE GmbH",
            "email": "dev@aoe.com",
            "homepage": "http://www.aoe.com"
        }
    ],
    "replace": {
        "happy_feet": "*"
    },
    "require": {
        "php": "^7.0",
        "typo3/cms-core": "^8.7 || ^9.5",
        "typo3/cms-extbase": "*"
    },
    "require-dev": {
        "typo3/testing-framework": "*",
        "phpunit/phpcov": "*",
        "squizlabs/php_codesniffer": "*",
        "sebastian/phpcpd": "*",
        "phpmd/phpmd": "*"
    },
    "autoload": {
        "classmap": [
            "Classes/"
        ],
        "psr-4": {
            "AOE\\HappyFeet\\": "Classes/"
        }
    },
    "keywords": [
        "typo3",
        "extbase",
        "footnote"
    ],
    "config": {
        "secure-http": false,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/happy_feet ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/happy_feet"
        ],
        "test:unit": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_ROOT=$(pwd)/.Build/Web .Build/bin/phpunit -c .Build/vendor/typo3/testing-framework/Resources/Core/Build/UnitTests.xml Tests/Unit/ --debug --verbose"
        ],
        "test:functional": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_ROOT=$(pwd)/.Build/Web .Build/bin/phpunit -c .Build/vendor/typo3/testing-framework/Resources/Core/Build/FunctionalTests.xml Tests/Functional/ --debug --verbose"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.0-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/AOEpeople/linkhandler-1.git"
        }
    ]
}
